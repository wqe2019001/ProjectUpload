<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpSuccess"
    android:orientation="vertical"
    android:gravity="center">


    <include
        layout="@layout/toolbar" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12pt"
        android:text="Glow up"
        android:gravity="center"
        android:textColor="#000"
        android:textSize="14sp" />
    <TextView
        android:id="@+id/textView2"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4pt"
        android:gravity="center"
        android:text="아래 사이트에서도 글로우업에 대한 정보를 \n확인하실 수 있습니다."
        android:textColor="#000"
        android:textSize="12sp" />

    <ImageView
        android:layout_width="270dp"
        android:layout_height="200dp"
        android:background="@drawable/sign1"
        android:layout_marginTop="4pt"
        />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12pt"
        android:text="Best Product"
        android:gravity="center"
        android:textColor="#000"
        android:textSize="14sp" />
    <TextView
        android:id="@+id/textView4"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4pt"
        android:gravity="center"
        android:text="그 시절 그대로, \n변하지 않는 아름다움을 만들어보세요."
        android:textColor="#000"
        android:textSize="12sp" />

    <ImageView
        android:layout_width="270dp"
        android:layout_height="220dp"
        android:background="@drawable/sign2"
        android:layout_marginTop="4pt"
        />
</LinearLayout>